<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yun.opern.dao.CollectionInfoDao">

    <insert id="saveCollectionInfo">
        INSERT INTO tbl_user_collection_info VALUES (${userId}, ${opernId}, 1, now())
    </insert>

    <select id="listUserCollectionInfo" resultType="UserCollectionInfo">
        SELECT *
        FROM tbl_user_collection_info
        WHERE delflg = 1
    </select>

</mapper>